    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.ironbowl.MainActivity"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/grass">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0C2340"
                android:orientation="vertical">

            <ImageView
                android:src="@drawable/auburn_tigers"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"


                />

            <TextView
                android:id="@+id/team_Auburn_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#E87722"
                android:fontFamily="sans-serif-light"
                android:textSize="56sp"
                android:layout_marginBottom="24dp"
                android:text="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="plus1POINT"
                android:text="Extra point"
                android:background="#E87722"
                android:textColor="#0C2340"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="plus2POINTS"
                android:text="CONVERSION/SAFETY"
                android:layout_marginRight="24dp"
                android:background="#E87722"
                android:textColor="#0C2340"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#E87722"
                android:onClick="FIELDGOAL"
                android:text="FIELD GOAL"
                android:textColor="#0C2340"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:textAllCaps="true" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:onClick="TOUCHDOWN"
                    android:text="Touchdown"
                    android:textColor="#0C2340"
                    android:background="#E87722"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:textAllCaps="true" />


        </LinearLayout>
        <View
            android:layout_marginTop="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#9E1B32"
            android:orientation="vertical">


            />
            <ImageView
                android:src="@drawable/football"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"


                />

            <TextView
                android:id="@+id/team_Alabama_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="0"
                android:textColor="#828A8F"
                android:fontFamily="sans-serif-light"
                android:textSize="56sp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="add1POINT"
                android:text="EXTRA POINT"
                android:background="#828A8F"
                android:textColor="#9E1B32"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="add2POINTS"
                android:text="CONVERSION/SAFETY"
                android:background="#828A8F"
                android:textColor="#9E1B32"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="add3POINTS"
                android:text="FIELD GOAL"
                android:background="#828A8F"
                android:textColor="#9E1B32"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:textAllCaps="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="add6POINTS"
                android:text="Touchdown"
                android:textColor="#9E1B32"
                android:background="#828A8F"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:textAllCaps="true" />


        </LinearLayout>

    </LinearLayout>

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    android:onClick="reset"
    android:layout_marginBottom="16dp"
    android:text="reset" />
        </RelativeLayout>






































